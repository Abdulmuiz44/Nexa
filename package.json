    "fs": "latest",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "latest",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "next-auth": "latest",
    "node-gyp": "latest",
    "node-mocks-http": "latest",
    "node-notifier": "latest",
    "nodemailer": "latest",
    "openai": "latest",
    "path": "latest",
